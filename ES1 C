// Dopo aver inserito N numeri interi, con N scelto da utente, sommarli
#include <stdio.h>
int main()
{
    int numero, dimensione, contatore, i = 0;
    float media;

    printf("Quanti numeri vuoi inserire?\n");
    scanf("%d", &dimensione);
    printf("Inserisci %d numeri\n", dimensione);
    while (i < dimensione)
    {
        scanf("%d", &numero);
        i++;
        contatore = contatore + numero;
    }

    media = (float) contatore / dimensione;

    printf("La somma e' %d\n", contatore);
    printf("La media e' %.2f", media);

    return 0;
}
